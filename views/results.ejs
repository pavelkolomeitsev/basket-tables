<%- include('includes/head.ejs') %>
  <body>
    <%- include('includes/navigation.ejs') %>

    <main>
      <% if (results.length > 0) { %>
        <% for (let result of results) { %>
          <article>
           <table class="card product-item" cellpadding="5">
              <tr>
                <td width="10%" align="center"><%= result.date %></td>
                <td width="25%" align="center"><%= result.teams %> </td>
                <td width="50%" align="center"><font size="6"><%= result.score %> </font></td>
                <td>
                  <a href="/edit-result/<%= result.id %>?edit=true" class="btn">Edit</a>
                </td>
                <td>
                  <form action="/delete-result" method="POST">
                    <button class="btn" type="submit">Delete</button>
                    <input type="hidden" name="productId" value="<%= result.id %>" />
                  </form>
                </td>
              </tr>
            </table>
          </article>
        <% } %> 
      <% } else { %>
        <h1 align="center">Any results!</h1>
      <% } %> 
    </main>
  </body>
</html>